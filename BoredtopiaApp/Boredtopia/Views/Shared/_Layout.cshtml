<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Boredtopia</title>
    @*<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />*@

    <link rel="stylesheet" href="css/pico.min.css" asp-append-version="true">

    @*   <link rel="stylesheet" href="~/Boredtopia.styles.css" asp-append-version="true" />*@
</head>
<body>
    <main class="container">
        <header>
            <nav>
                <ul>
                    <li><img src="image/Hotpot.png" alt="BoardTopia logo class= " logo" /></li>
                </ul>

                <ul>
                    <li><a asp-action="Index" asp-controller="Home"> <h1>BoardTopia</h1></a></li>
                </ul>

                <ul>
                    <li>Mouse</li>
                </ul>

            </nav>
        </header>
        <nav>
            <ul>
                <li><a asp-controller="Home" asp-action="Index">Home</a></li>
            </ul>
            <ul>
                <li><a asp-controller="Home" asp-action="Games">Games</a></li>
            </ul>
            <ul>
                <li><a asp-controller="Home" asp-action="Profile">Profile</a>
                </li>
            </ul>
                <li>
                    <a asp-controller="Home" asp-action="About">About</a>
                </li>
            </ul>
        </nav>



        <div role="main">
            @RenderBody()
        </div>
    </main>



    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - Boredtopia - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
</body>
</html>
